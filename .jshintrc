{
    "quotmark": "single", // only single quotes
    "indent": 4, // tab width
    "multistr": true,
    "undef": true,
    "unused": true,
    "sub": true, // supress access properties of objects by ['array notation']
    "scripturl": true,
    "nonbsp": true,
    "latedef": true,
    "freeze": true, // ptohibit extend/override native prototypes
    "evil": false,
    "nonew": true,
    "noempty": true,
    "newcap": true,
    "immed": true,
    "eqeqeq": true,
    "debug": false,
    "devel": false,
    "curly": true,
    "bitwise": false,
    "expr": true,

    // FLOW FUNCTIONS
    "strict": false, // avoid use stric mode ES5
    "maxcomplexity": 5, // cyclomatic complexity
    "maxdepth": 3, // nested blocks
    "maxstatements": 10, // max number of function statements per scope
    "maxparams": 3,
    "noarg": true,

    // ENVIRONMENT
    "jquery": true,

    // define readonly variables
    "globals": {
        "APP": false
    }
}
